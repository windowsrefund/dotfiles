# disable bell
xset -b

# turn off screen in 20 minutes
xset dpms 1200

# no screen saver
xset s off

# kill X with ctrl+alt+backspace
setxkbmap -option terminate:ctrl_alt_bksp

# keyboard layout
setxkbmap us

# speedy keys
xset r rate 210 40

# map keys as defined
xmodmap ~/.Xmodmap

# remove mouse when idle
unclutter &

# pulse audio
start-pulseaudio-x11 &

# jackdbus starter
autojack > /tmp/autojack.log 2>&1 < /dev/null &

# composite manager
compton -b &

# blue light
redshift-gtk &

# load Xresources
xrdb ~/.Xresources
 
# restore last color scheme
wal -Rq

# something related to font size & resolution/dpi
#WINIT_X11_SCALE_FACTOR=1
exec i3 -V > /tmp/i3.log
#exec i3 -c ~/.config/i3/config.min -V > /tmp/i3.log
# exec startxfce4
