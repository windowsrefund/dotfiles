$include /etc/inputrc

set bell-style none
set editing-mode vi
set show-mode-in-prompt on

set vi-cmd-mode-string "\1\e[1 q\2"
set vi-ins-mode-string "\1\e[5 q\2"

# [0 -> blinking block.
# [1 -> blinking block (default)
# [2 -> steady block
# [3 -> blinking underline
# [4 -> steady underline
# [5 -> blinking bar (xterm)
# [6 -> steady bar (xterm)
