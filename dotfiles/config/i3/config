set $mod Mod1
set $left h
set $down j
set $up k
set $right l
set $monitor-left DisplayPort-0
set $monitor-right DisplayPort-1
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $term alacritty
# set $term termite
# follow mouse for window focus
focus_follows_mouse yes

floating_modifier $mod

bindsym $mod+Return exec --no-startup-id $term
# vim: set ft=conf :
set_from_resource $black i3wm.color0 #000000
set_from_resource $black_h i3wm.color8 #000000
set_from_resource $red  i3wm.color1  #000000
set_from_resource $red_h  i3wm.color9  #000000
set_from_resource $green i3wm.color2 #000000
set_from_resource $green_h i3wm.color10 #000000
set_from_resource $yellow  i3wm.color3  #000000
set_from_resource $yellow_h  i3wm.color11  #000000
set_from_resource $blue  i3wm.color4  #000000
set_from_resource $blue_h  i3wm.color12  #000000
set_from_resource $purple  i3wm.color5  #000000
set_from_resource $purple_h  i3wm.color13  #000000
set_from_resource $teal  i3wm.color6  #000000
set_from_resource $teal_h  i3wm.color14  #000000
set_from_resource $white i3wm.color7 #ffffff
set_from_resource $white_h i3wm.color15 #ffffff

# class                 border  backgrd text    indicator child_border
client.focused          $black  $black  $white  $red      $purple
client.focused_inactive $black  $black  $white  $black    $black
client.unfocused        $black  $black  $white  $black    $black
client.urgent           $purple $black  $white  $purple   $purple
client.placeholder      $black  $black  $white  $black    $black

# new_window pixel 3
# new_float normal
default_border pixel 4
default_floating_border pixel 4
floating_modifier $mod

# Window kill command
bindsym $mod+x kill

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# split orientation
bindsym $mod+s split toggle

# toggle between splitv and splith layouts
bindsym $mod+Shift+s layout toggle split

# toggle float for a window
bindsym $mod+Shift+f floating toggle

# toggle mode focus (floating vs. tiling)
bindsym $mod+m focus mode_toggle

