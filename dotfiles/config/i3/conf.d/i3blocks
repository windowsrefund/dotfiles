bar {
  status_command i3blocks -c $HOME/.config/i3blocks/left-display.conf
  position top
  mode dock
  modifier None
  font pango:Hack,FontAwesome 14
  output primary
  tray_output primary
  colors {
    separator $green
    background $black
    statusline $white
    focused_workspace   $black  $white    $black
    active_workspace    $black  $black    $white
    inactive_workspace  $black  $black_h  $white
    urgent_workspace    $black  $red      $black
  }
  # Take a screenshot by right clicking on the bar
  # bindsym --release button3 exec --no-startup-id import /tmp/latest-screenshot.png
}

bar {
  status_command i3blocks -c $HOME/.config/i3blocks/right-display.conf
  position top
  modifier None
  font pango:FontAwesome 14
  output DisplayPort-1
  binding_mode_indicator no
  colors {
    separator $white
    background $black
    statusline $white
    focused_workspace   $black  $white    $black
    active_workspace    $black  $black    $white
    inactive_workspace  $black  $black_h  $white
    urgent_workspace    $black  $red      $black
  }
}
